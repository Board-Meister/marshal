{
  "compilerOptions": {
    "target": "ES2020",
    "declaration": true,
    "module": "ESNext",
    "outDir": "./dist",
    "jsx": "react",

    "moduleResolution": "bundler",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"]
    },
    "allowJs": true,
    "experimentalDecorators": true
  },
  "include": [
    "*.tsx",
    "test"
  ],
}
